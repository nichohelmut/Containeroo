<div
id="map"
style="width: 100%;
height: 400px;"
data-markers="<%= @markers.to_json %>"
data-usermarkers="<%= @usermarkers.to_json %>"

></div>
<link href='https://fonts.googleapis.com/css?family=Passion+One:700' rel='stylesheet' type='text/css'>

<div class="header-wrapper">
  <h1>You can find fridges in</h1>
  <h1>
    <span class="wrapper">
      <span class="word a">Kreuzberg</span>
      <span class="word b">Mitte</span>
      <span class="word c">Moabit</span>
      <span class="word d">Prenzlauer Berg</span>
      <span class="word e">Fridrichshain</span>
      <span class="word f">Charlottenburg</span>
      <span class="word g">Neu Kölln</span>
      <span class="word h">Wedding</span>
      <span class="word i">Pankow</span>
      <span class="word j">Lichterfelde</span>
      <span class="word k">Schöneberg</span>
      <span class="word l">Wilmersdorf</span>
      <span class="word m">Halensee</span>
      <span class="word n">Rummelsburg</span>
      <span class="word o">Görlitzer Park</span>
      <span class="word p">Tegel</span>
      <span class="word q">Fridenau</span>
      <span class="word end">Berlin</span>
    </span>
  </h1>
</div>
<!-- , providers_container_user_path(id: container.user.id, container_id: container.id) -->


<ul class="cards">
<% @containers.each do |container| %>
  <li class="cards__item">
    <div class="card">
      <%# link_to customers_container_path(container) do %>
      <div class="card__image card__image--fence" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)),url(<%=cl_image_path(container.photo, height: 300, width: 400, crop: :fill) unless container.photo.blank? %>)"></div>
      <%# end %>
      <div class="card__content">
        <div class="card__title">  <h2> <%=container.supermarket %></h2></div>
        <p class="card__text"><p><%= container.address %></p>
          <p>Products: <%= container.product_category %><p>
          <p>Posted by <%= container.user.first_name %> </p></p>
          <p><%= container.description  %></p>

      </div>
    </div>
  </li>

<% end %>
</ul>
