<div
id="map"
style="width: 100%;
height: 600px;"
data-markers="<%= @markers.to_json %>"
></div>


<div class="container">
  <div class="row">
    <% @containers.each do |container| %>
    <div class="col-xs-12 col-sm-4">

      <div class="card" style="background-image: linear-gradient(rgba(0,0,2600,0.3), rgba(0,0,260,0.2)), url('https://images.unsplash.com/photo-1488931455034-842396c062af?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=441549b335b69c1b51d583669b447aa6&auto=format&fit=crop&w=1353&q=80');">
        <div class="card-description">
          <div class="card-category">
            <h2><%= container.supermarket %></h2></div>
          <%# image_tag container.photo, height: 400, width: 400, crop: :fit %>
          <p><%= container.address %></p>
          <p>Products: <%= container.product_category %><p>
          <p>About: <%= container.description %><p>
          <p>Posted by <%= link_to container.user.first_name, providers_container_user_path(id: container.user.id, container_id: container.id) %> </p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>


