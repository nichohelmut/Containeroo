<div
id="map"
style="width: 100%;
height: 400px;"
data-markers="<%= @markers.to_json %>"
></div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="show-titles">

          <div>
          <% if @container.supermarket == "Restaurant" %>
          <h2> <%= image_tag "restaurant.png", height: 80 %><%= @container.supermarket %></h2>
          <% else @container.supermarket ==  "Aldi" || "Real" || "Metro" || "Lidl"|| "Spar" || "Netto" || "Plus" || "TanteEmma" %>
          <h2> <%= image_tag "supermarket.png", height: 80 %><%= @container.supermarket %></h2>
          <% end %>
          </div>

          <div>
            <p><%= image_tag "where.png", height: 80 %>
            <%= @container.address %><p>
          </div>
          <div>
            <p><%= image_tag "food.png", height: 80 %> <%= @container.product_category %><p>
          </div>
        </div>
    </div>
  </div>
  <div class="row">
      <div class="col-xs-12">
        <div class="description">
          <div class="clean"> <%= image_tag "clean.png", height: 80 %>
          </div>
          <p><%= @container.description %><p>
      </div>
    </div>
</div>
<% if @container.photo.present? %>
<%= cl_image_tag @container.photo, height: 300, width: 400, crop: :fill %>
<% end %>


    <%= link_to "Confirm", providers_containers_path, class: "btn-submit" %>



