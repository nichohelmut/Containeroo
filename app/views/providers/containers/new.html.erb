<%= simple_form_for @container, url: providers_containers_path  do |f| %>
<%= f.input :supermarket, collection: %w(HIT Rewe Edeka Aldi Real Metro Lidl Spar Netto Plus TanteEmma) %>
<%= f.input :address,
    :input_html => {
      :value => @container.address,
      :id => "container_address"
    } %>
<%= f.input :product_category, collection:  %w(vegetables meats fruits bread dairy liquid beer cans ingredients starchy) %>
<%= f.input :description %>
<%= f.button :submit %>
<% end %>
