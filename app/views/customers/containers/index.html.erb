<div
id="map"
style="width: 100%;
height: 400px;"
data-markers="<%= @markers.to_json %>"
data-user_markers="<%= @user_markers.to_json %>"

></div>

<div class="container">


  <%= simple_form_for User.new, url: customers_containers_path, method: :get do |f| %>
  <%= f.input :address, input_html: {id: "user_address"} %>
  <%= f.input :first_name, as: :hidden, autofocus: true, input_html: { value:  "mikkel" } %>
  <%= f.input :last_name, as: :hidden,  autofocus: true , input_html: { value:  "angelo" }%>
  <%= f.input :email, as: :hidden, autofocus: true , input_html: { value:   [[('a'..'z').to_a[rand(26)]], '@email.com'].join   } %>
  <%= f.input :password, as: :hidden, input_html: { value:  123456 } %>
  <%= f.input :password_confirmation, as: :hidden, input_html: { value:  123456 }%>
  <%= f.submit "submit" %>
  <% end %>


  <%= simple_form_for Container.new, url: customers_containers_path, method: :get do |f| %>
  <%= f.input :product_category, collection:  %w(vegetables meats fruits bread dairy liquid beer cans ingredients starchy) %>
    <%# f.input :address, input_html: {id: "user_address"} %>

  <%= f.submit "submit" %>
  <% end %>



<ul class="cards">
<% @containers.each do |container| %>
  <li class="cards__item">
    <div class="card">
      <%= link_to customers_container_path(container) do %>
      <div class="card__image card__image--fence" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)),url(<%=cl_image_path(container.photo, height: 300, width: 400, crop: :fill) unless container.photo.blank? %>)"></div>
      <% end %>
      <div class="card__content">
        <div class="card__title">  <h2> <%=container.supermarket %></h2></div>
        <p class="card__text"><p><%= container.address %><p>
            <p>Products: <%= container.product_category %><p>
            <p>Posted by <%= link_to container.user.first_name, providers_container_user_path(id: container.user.id, container_id: container.id) %> </p>
        <button class="btn btn--block card__btn">Button</button>
      </div>
    </div>
  </li>

<% end %>
</ul>




